{
  "templates": [
    {
      "type": "VideoObject",
      "description": "サムネイル、再生時間、再生URLを含む動画コンテンツページ。Google検索で動画のリッチリザルトを有効にします。",
      "template": {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        "name": "[Video Title]",
        "description": "[Video Description]",
        "thumbnailUrl": "[Thumbnail Image URL]",
        "uploadDate": "[YYYY-MM-DD]",
        "duration": "[ISO 8601 Duration, e.g. PT1H30M]",
        "contentUrl": "[Direct Video File URL]",
        "embedUrl": "[Embed Player URL]",
        "publisher": {
          "@type": "Organization",
          "name": "[Publisher Name]",
          "logo": {
            "@type": "ImageObject",
            "url": "[Logo URL]"
          }
        }
      }
    },
    {
      "type": "BroadcastEvent",
      "description": "Google検索結果でLIVEバッジを表示するためのライブ配信コンテンツ。VideoObjectとisLiveBroadcastフラグが必要です。",
      "template": {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        "name": "[Live Stream Title]",
        "description": "[Live Stream Description]",
        "thumbnailUrl": "[Thumbnail Image URL]",
        "uploadDate": "[YYYY-MM-DD]",
        "contentUrl": "[Stream URL]",
        "embedUrl": "[Embed Player URL]",
        "publication": {
          "@type": "BroadcastEvent",
          "isLiveBroadcast": true,
          "startDate": "[YYYY-MM-DDTHH:MM:SSZ]",
          "endDate": "[YYYY-MM-DDTHH:MM:SSZ]"
        }
      }
    },
    {
      "type": "Clip",
      "description": "動画内の重要な場面やチャプター。タイムスタンプリンク付きの主要な場面のリッチリザルトを有効にします。",
      "template": {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        "name": "[Video Title]",
        "description": "[Video Description]",
        "thumbnailUrl": "[Thumbnail Image URL]",
        "uploadDate": "[YYYY-MM-DD]",
        "contentUrl": "[Direct Video File URL]",
        "hasPart": [
          {
            "@type": "Clip",
            "name": "[Clip Title]",
            "startOffset": 0,
            "endOffset": 120,
            "url": "[Video URL with timestamp, e.g. ?t=0]"
          },
          {
            "@type": "Clip",
            "name": "[Next Clip Title]",
            "startOffset": 120,
            "endOffset": 300,
            "url": "[Video URL with timestamp, e.g. ?t=120]"
          }
        ]
      }
    },
    {
      "type": "SeekToAction",
      "description": "動画リッチリザルトでシーク機能を有効にします。ユーザーが検索結果から特定のタイムスタンプにジャンプできるようになります。",
      "template": {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        "name": "[Video Title]",
        "description": "[Video Description]",
        "thumbnailUrl": "[Thumbnail Image URL]",
        "uploadDate": "[YYYY-MM-DD]",
        "contentUrl": "[Direct Video File URL]",
        "potentialAction": {
          "@type": "SeekToAction",
          "target": "[Video URL]?t={seek_to_second_number}",
          "startOffset-input": "required name=seek_to_second_number"
        }
      }
    },
    {
      "type": "SoftwareSourceCode",
      "description": "オープンソースおよびコードリポジトリページ。プログラミング言語、プラットフォーム、リポジトリの場所を記述します。",
      "template": {
        "@context": "https://schema.org",
        "@type": "SoftwareSourceCode",
        "name": "[Repository Name]",
        "description": "[Repository Description]",
        "codeRepository": "[Repository URL, e.g. https://github.com/org/repo]",
        "programmingLanguage": "[Language, e.g. Python]",
        "runtimePlatform": "[Platform, e.g. Node.js]",
        "author": {
          "@type": "Person",
          "name": "[Author Name]"
        },
        "license": "[License URL, e.g. https://opensource.org/licenses/MIT]",
        "dateCreated": "[YYYY-MM-DD]",
        "dateModified": "[YYYY-MM-DD]"
      }
    },
    {
      "type": "ProductGroup",
      "description": "サイズや色などの属性でグループ化されたECサイトの商品バリエーション。variesByおよびhasVariantプロパティを使用して、バリエーション対応のリッチリザルトを有効にします。",
      "template": {
        "@context": "https://schema.org",
        "@type": "ProductGroup",
        "name": "[Product Name]",
        "description": "[Product group description]",
        "productGroupID": "[product-group-id]",
        "variesBy": ["https://schema.org/size", "https://schema.org/color"],
        "hasVariant": [
          {
            "@type": "Product",
            "name": "[Variant - Red, Large]",
            "sku": "[SKU-001]",
            "color": "[Red]",
            "size": "[Large]",
            "offers": {
              "@type": "Offer",
              "price": "[29.99]",
              "priceCurrency": "USD",
              "availability": "https://schema.org/InStock"
            }
          }
        ]
      }
    },
    {
      "type": "ProfilePage",
      "description": "著者、クリエイター、またはチームメンバーのプロフィールページ。mainEntityのPersonマークアップとsameAsリンクを使用してE-E-A-Tシグナルを強化します。",
      "template": {
        "@context": "https://schema.org",
        "@type": "ProfilePage",
        "mainEntity": {
          "@type": "Person",
          "name": "[Author Name]",
          "url": "[Profile URL]",
          "description": "[Author bio and expertise summary]",
          "sameAs": [
            "[Twitter URL]",
            "[LinkedIn URL]"
          ]
        }
      }
    },
    {
      "type": "Certification",
      "description": "製品認証（Energy Star、安全認証、オーガニック認証など）。2025年4月にEnergyConsumptionDetailsから置き換えられました。",
      "template": {
        "@context": "https://schema.org",
        "@type": "Product",
        "name": "[Product Name]",
        "hasCertification": {
          "@type": "Certification",
          "certificationIdentification": "[Certification Name, e.g. Energy Star]",
          "issuedBy": {
            "@type": "Organization",
            "name": "[Issuing Organization, e.g. EPA]"
          }
        }
      }
    },
    {
      "type": "OfferShippingDetails",
      "description": "ECサイト商品の配送・配達情報。送料、出荷準備時間、配送時間を含みます。",
      "template": {
        "@context": "https://schema.org",
        "@type": "Product",
        "name": "[Product Name]",
        "offers": {
          "@type": "Offer",
          "price": "[Price]",
          "priceCurrency": "USD",
          "shippingDetails": {
            "@type": "OfferShippingDetails",
            "shippingRate": {
              "@type": "MonetaryAmount",
              "value": "[0]",
              "currency": "USD"
            },
            "deliveryTime": {
              "@type": "ShippingDeliveryTime",
              "handlingTime": {
                "@type": "QuantitativeValue",
                "minValue": 0,
                "maxValue": 1,
                "unitCode": "DAY"
              },
              "transitTime": {
                "@type": "QuantitativeValue",
                "minValue": 1,
                "maxValue": 5,
                "unitCode": "DAY"
              }
            }
          }
        }
      }
    }
  ]
}
